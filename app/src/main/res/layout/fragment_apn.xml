<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_btn"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/fragment_apn_btApnList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:text="APN List [SIM 1]"/>
                <Button
                    android:id="@+id/fragment_apn_btApnList2"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APN List [SIM 2]"/>


                <Button
                    android:id="@+id/btn_add_apn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:text="Add APN [SIM 1]"/>
                <Button
                    android:id="@+id/btn_add_apn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:text="Add APN [SIM 2]"/>

                <Button
                    android:id="@+id/fragment_apn_btReset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset APN [SIM1 SIM2]"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/fragment_apn_btOperator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Operator [SIM 1]"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/tv_opertor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="will get operator"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/fragment_apn_btOperator"/>
                <Button
                    android:id="@+id/fragment_apn_btOperator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get Operator [SIM 2]"
                    android:background="@color/APN"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"/>
                <TextView
                    android:id="@+id/tv_opertor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="will get operator2"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/fragment_apn_btOperator2"/>
            </LinearLayout>






    </ScrollView>

</RelativeLayout>