<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TabView.connectivityFragment">

    <Switch
        android:id="@+id/switchWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:layout_margin="3dp"
        android:textSize="15dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@color/colorConnectivity"/>

    <Switch
        android:id="@+id/switchBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLUETOOTH"
        android:layout_margin="3dp"
        android:textSize="15dp"
        android:padding="15dp"
        android:textColor="@color/white"
        android:background="@color/colorConnectivity"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/switchSim1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIM1"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@color/colorConnectivity"/>

        <Switch
            android:id="@+id/switchSim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIM2"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@color/colorConnectivity"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/switchDataSim1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATA SIM 1"
            android:layout_margin="3dp"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@color/colorConnectivity"/>

        <Switch
            android:id="@+id/switchDataSim2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATA SIM 2"
            android:layout_margin="3dp"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/white"
            android:background="@color/colorConnectivity"/>

    </LinearLayout>



</LinearLayout>