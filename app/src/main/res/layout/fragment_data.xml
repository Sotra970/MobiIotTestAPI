<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <Button
        android:id="@+id/fragment_data_setSimOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DATA"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="Set Data [SIM 1]"/>
    <Button
        android:id="@+id/fragment_data_setSimTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DATA"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="Set Data [SIM 2]"/>
    <Button
        android:id="@+id/fragment_data_manageBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DATA"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="Enable Data"/>
    <Button
        android:id="@+id/fragment_data_disableBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DATA"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="Disable Data"/>
    <Button
        android:id="@+id/fragment_data_getDataStatusBt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DATA"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:text="Get Data Status"
        />
    <TextView
        android:id="@+id/fragment_data_tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/DATA"
        />
</LinearLayout>